
@{
    ViewBag.Title = "ByOPID";
    Layout = "~/Views/Shared/_Layout_List.cshtml";
}

<script src="~/Scripts/JQueryTool/Method.js"></script>
<script src="~/Scripts/Search/ByOPID.js"></script>
<link href="~/Static/Css/All.css" rel="stylesheet" />

<table id="SearchByOPIDWhere" class="tableType1">
    <tr>
        <td style="width:50px;text-align:center;">机&nbsp;种</td>
        <td colspan="2" id="tdByOPIDModelList">
            <input type="radio" name="Model" value="496" />496&nbsp;&nbsp;
            <input type="radio" name="Model" value="497" />497&nbsp;&nbsp;
            <input type="radio" name="Model" value="ACX" />ACX&nbsp;&nbsp;
